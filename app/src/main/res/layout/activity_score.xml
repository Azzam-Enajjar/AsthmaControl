<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.pdx.oss.asthmacontrol.ScoreActivity"
    android:background = "#006699">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="In the past 4 weeks, how much of the time did your asthma keep you from getting as much done at work, school or at home?"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number of days:"
        android:id="@+id/textView2"
        android:textIsSelectable="false"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score:"
        android:id="@+id/textView3"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/textView2"
        android:layout_toLeftOf="@+id/scoreText1"
        android:layout_marginRight="5dp"/>

    <EditText
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/daysText1"
        android:background="@android:color/white"
        android:gravity="center"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/scoreText1"
        android:background="@android:color/white"
        android:text="5"
        android:gravity="center"
        android:layout_alignTop="@+id/daysText1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="During the past 4 weeks, how often have you had shortness of breath?"
        android:id="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/daysText1"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number of days:"
        android:id="@+id/textView5"
        android:textIsSelectable="false"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score:"
        android:id="@+id/textView6"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/textView5"
        android:layout_toLeftOf="@+id/scoreText2"
        android:layout_marginRight="5dp"/>

    <EditText
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/daysText2"
        android:background="@android:color/white"
        android:gravity="center"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textView5"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/textView5" />

    <EditText
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/scoreText2"
        android:background="@android:color/white"
        android:text="5"
        android:gravity="center"
        android:layout_alignTop="@+id/daysText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="During the past 4 weeks, how often did your asthma symptoms (wheezing, coughing, shortness of breath, chest tightness, or pain) wake you up at night or earlier than usual in the morning?"
        android:id="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/daysText2"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number of days:"
        android:id="@+id/textView8"
        android:textIsSelectable="false"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score:"
        android:id="@+id/textView9"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/textView8"
        android:layout_toLeftOf="@+id/scoreText3"
        android:layout_marginRight="5dp"/>

    <EditText
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/daysText3"
        android:background="@android:color/white"
        android:gravity="center"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textView8"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/textView8" />

    <EditText
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/scoreText3"
        android:background="@android:color/white"
        android:text="5"
        android:gravity="center"
        android:layout_alignTop="@+id/daysText3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="During the past 4 weeks, how often have you used your rescue inhaler or nebulizer medication (such as albuterol)?"
        android:id="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/daysText3"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number of days:"
        android:id="@+id/textView11"
        android:textIsSelectable="false"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score:"
        android:id="@+id/textView12"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/textView11"
        android:layout_toLeftOf="@+id/scoreText4"
        android:layout_marginRight="5dp"/>

    <EditText
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/daysText4"
        android:background="@android:color/white"
        android:gravity="center"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textView11"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/textView11" />

    <EditText
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/scoreText4"
        android:background="@android:color/white"
        android:text="5"
        android:gravity="center"
        android:layout_alignTop="@+id/daysText4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How would you rate your asthma control during the past 4 weeks?"
        android:id="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/daysText4"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Not controlled at all --> 1  Poorly controlled  --> 2  Somewhat controlled --> 3  Well controlled --> 4  Completely controlled --> 5"
        android:id="@+id/textView14"
        android:textSize="11dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score:"
        android:id="@+id/textView15"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView14"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <EditText
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/scoreText5"
        android:background="@android:color/white"
        android:text="5"
        android:gravity="center"
        android:layout_below="@+id/textView14"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total:"
        android:id="@+id/textView16"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/imageView5"
        android:layout_alignRight="@+id/textView12"/>

    <EditText
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/totalScoreText"
        android:background="@android:color/white"
        android:text="5"
        android:gravity="center"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your asthma is not under control"
        android:id="@+id/textView17"
        android:textSize="18dp"
        android:textColor="#ff17ff35"
        android:layout_above="@+id/textView16"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"
        android:background="@drawable/dividerline"
        android:layout_below="@+id/scoreText1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/dividerline"
        android:layout_below="@+id/scoreText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@drawable/dividerline"
        android:layout_below="@+id/scoreText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:background="@drawable/dividerline"
        android:layout_below="@+id/scoreText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:background="@drawable/dividerline"
        android:layout_below="@+id/scoreText5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
